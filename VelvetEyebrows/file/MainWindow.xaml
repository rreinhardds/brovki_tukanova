<Window x:Class="VelvetEyebrows.view.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VelvetEyebrows.view"
        mc:Ignorable="d"
        Title="Бархатные бровки - главная" Height="600" Width="1100" FontFamily="Tahoma">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition   x:Name="firstGridColumn" Width="200" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Image Source="./../Assets/Images/beauty_logo.png" Margin="10" />
        <StackPanel Grid.Row="1" Margin="10">
            <Button Content="Услуги" Click="navigateToServices"  Margin="0 10" />
            <Button Content="Ближайшие записи" Click="goToRegistrationPage" Cursor="Hand" />
        </StackPanel>
        <Frame x:Name="mainFrame" Grid.Column="1" Grid.RowSpan="2" />

    </Grid>
</Window>
